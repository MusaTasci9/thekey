{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "module": "commonjs", // Add this for Jest compatibility
    "esModuleInterop": true, // Ensure ES module compatibility
    "skipLibCheck": true // Speeds up TypeScript compilation
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
